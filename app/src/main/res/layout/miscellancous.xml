<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/CustomBackgroundColor"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/AppBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay">


        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>





    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                    <TextView
                        android:id="@+id/theme_UI"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Theme and UI"
                        android:textColor="#e7be38"
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="20dp"
                        />

                    <TextView
                        android:id="@+id/dark_theme"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Dark Theme"
                        android:layout_below="@id/theme_UI"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="20dp"
                        android:textColor="?attr/CustomTextColor"
                        android:textStyle="bold"
                        />

                    <TextView
                        android:id="@+id/checking_UI"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Check to use Dark Theme UI."
                        android:layout_below="@+id/dark_theme"
                        android:layout_marginLeft="20dp"

                        />

                    <androidx.appcompat.widget.AppCompatCheckBox
                        android:id="@+id/dark_mode"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/theme_UI"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="15dp"
                        />


                    <TextView
                        android:id="@+id/theme"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Theme"

                        android:layout_below="@+id/checking_UI"
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="20dp"
                        android:textStyle="bold"
                        android:textColor="?attr/CustomTextColor"
                        />

                    <TextView
                        android:id="@+id/chenge_app"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Change the UI color of the App"
                        android:layout_below="@+id/theme"
                        android:layout_marginLeft="20dp"

                        />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#707070"
                    android:layout_marginTop="20dp"
                    />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp">

                    <TextView
                        android:id="@+id/setting"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Settings"
                        android:textColor="#e7be38"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="20dp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Floating Menu"
                        android:layout_below="@+id/setting"
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="20dp"
                        android:id="@+id/floating_menu"
                        android:textColor="?attr/CustomTextColor"

                        android:textStyle="bold"
                        />
                    <TextView
                        android:id="@+id/hide_floating"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hide Floating menu after choosing an action in view Screen"
                        android:layout_below="@+id/floating_menu"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="60dp"

                        />

                    <androidx.appcompat.widget.AppCompatCheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/setting"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="15dp"
                        />

                    <TextView
                        android:id="@+id/Notification"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Notification"
                        android:layout_below="@+id/hide_floating"
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="20dp"
                        android:textStyle="bold"
                        android:textColor="?attr/CustomTextColor"

                        />
                    <TextView
                        android:id="@+id/notified"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Get Notified Whenever New Statuses is / are Avaliable"
                        android:layout_marginRight="60dp"
                        android:layout_below="@+id/Notification"
                        android:layout_marginLeft="20dp"

                        />
                    <androidx.appcompat.widget.AppCompatCheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/hide_floating"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="15dp"
                        />

                    <TextView
                        android:id="@+id/auto_save"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Auto Save"
                        android:layout_below="@id/notified"
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="20dp"
                        android:textStyle="bold"
                        android:textColor="?attr/CustomTextColor"

                        />
                    <TextView
                        android:id="@+id/status_save"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Automatically save New Status when Avaliable"
                        android:layout_marginRight="60dp"
                        android:layout_below="@+id/auto_save"
                        android:layout_marginLeft="20dp"

                        />
                    <androidx.appcompat.widget.AppCompatCheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/notified"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="15dp"
                        />

                    <TextView
                        android:id="@+id/status_path"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Status Save at Path"
                        android:layout_below="@id/status_save"
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="20dp"
                        android:textStyle="bold"
                        android:textColor="?attr/CustomTextColor"

                        />
                    <TextView
                        android:id="@+id/path"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="/storage / emulated /0/ StorySaver/"
                        android:layout_marginRight="60dp"
                        android:layout_below="@+id/status_path"
                        android:layout_marginLeft="20dp"
                        />

                    <TextView
                        android:id="@+id/clear_cache"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Clear App Cache"
                        android:layout_below="@id/path"
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="20dp"
                        android:textStyle="bold"
                        android:textColor="?attr/CustomTextColor"

                        />
                    <TextView
                        android:id="@+id/cache_and_jump"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Clear Temporary Cache and junk file to speed up App !"
                        android:layout_marginRight="60dp"
                        android:layout_below="@+id/clear_cache"
                        android:layout_marginLeft="20dp"
                        />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#707070"
                    android:layout_marginTop="20dp"
                    />

                <RelativeLayout
                    android:id="@+id/suggestion_Layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                <TextView
                    android:id="@+id/Suggestion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Suggestions"
                    android:textColor="#e7be38"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="20dp"
                    />

                <TextView
                    android:id="@+id/app_suggestion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="App Suggestions"
                    android:layout_below="@id/Suggestion"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:textColor="?attr/CustomTextColor"
                    android:textStyle="bold"
                    />

                <TextView
                    android:id="@+id/show_other_app"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Show our other app whenever Possible."
                    android:layout_below="@+id/app_suggestion"
                    android:layout_marginLeft="20dp"

                    />

                <androidx.appcompat.widget.AppCompatCheckBox

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/Suggestion"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="15dp"
                    />

                </RelativeLayout>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#707070"
                    android:layout_marginTop="20dp"
                    />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp">

                <TextView
                    android:id="@+id/Misc."
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Misc."
                    android:textColor="#e7be38"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="What's New"
                    android:layout_below="@+id/Misc."
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="20dp"
                    android:id="@+id/whats_new"
                    android:textColor="?attr/CustomTextColor"
                    android:textStyle="bold"
                    />
                <TextView
                    android:id="@+id/new_version"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="See what's new in the version"
                    android:layout_below="@+id/whats_new"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="60dp"

                    />


                <TextView
                    android:id="@+id/about_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="About"
                    android:layout_below="@+id/new_version"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="20dp"
                    android:textStyle="bold"
                    android:textColor="?attr/CustomTextColor"
                    />
                <TextView
                    android:id="@+id/found_bugs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Let's us know if you have any suggest or Found Bugs"
                    android:layout_marginRight="60dp"
                    android:textColor="?attr/CustomTextColor"
                    android:layout_below="@+id/about_phone"
                    android:layout_marginLeft="20dp"

                    />


                <TextView
                    android:id="@+id/Feedback"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Feedback"
                    android:layout_below="@id/found_bugs"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="20dp"
                    android:textStyle="bold"
                    android:textColor="?attr/CustomTextColor"
                    />
                <TextView
                    android:id="@+id/version"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2.88.97"
                    android:layout_marginRight="60dp"
                    android:layout_below="@+id/Feedback"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="20dp"
                    android:textColor="?attr/CustomTextColor"

                    />

                </RelativeLayout>
            </LinearLayout>
        </ScrollView>

</LinearLayout>
